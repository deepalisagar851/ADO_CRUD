@model AdoMvc.ViewModel.Employee

@{
    ViewBag.Title = "Edit";
}


<div class="row">
    <div class="col-md-6 offset-3">
        <div class="card">
            <div class="card-header">
                <h4>Edit</h4>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Edit", "Users", FormMethod.Post))
                {
                    <div class="form-group">
                        <input type="hidden" name="Id" value="@Model.Id" />
                    </div>
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" name="Name" value="@Model.Name" />
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control" name="Email" value="@Model.Email" />
                    </div>
                    <div class="form-group">
                        <label>Mobile</label>
                        <input type="text" class="form-control" name="Mobile" value="@Model.Mobile" />
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        <input type="text" class="form-control" name="Adress" value="@Model.Adress" />
                    </div>
                    <div class="form-group">
                        <label>Gender</label>
                        <input type="text" class="form-control" name="Gender" value="@Model.Gender" />
                    </div>
                    <div class="form-group">
                        <label>IsActive</label>
                        <input type="number" class="form-control" name="IsActive" value="@Model.IsActive" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@Html.ActionLink("Back to List", "Index")