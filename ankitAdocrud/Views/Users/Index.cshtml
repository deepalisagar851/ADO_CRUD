@model IEnumerable<AdoMvc.ViewModel.Employee>

@{
    ViewBag.Title = "Home Page";
}
<link href="~/Content/Site.css" rel="stylesheet" />
<form class="form-inline my-2 my-lg-0 mt-3">
    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" id="myInput">
</form>
<table class="table mt-3">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Address</th>
        <th>Gender</th>
        <th>IsActive</th>
        <th>Action</th>
    </tr>
    @foreach (var emp in Model)
    {
        <tbody id="myTable">
            <tr>
                <td>@emp.Id</td>
                <td>@emp.Name</td>
                <td>@emp.Email</td>
                <td>@emp.Mobile</td>
                <td>@emp.Adress</td>
                <td>@emp.Gender</td>
                <td>@emp.IsActive</td>
                <td>
                    <a href="/Users/Delete?id=@emp.Id"><i class="fa fa-trash" style="font-size:23px; color:red;"></i></a>
                    <a href="/Users/Edit?id=@emp.Id"><i class="fa fa-edit" style="font-size: 23px; color: blue;"></i></a>
                </td>
            </tr>
        </tbody>
    }
</table>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>